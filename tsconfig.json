{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "declaration": true,
    "sourceMap": false,
    "outDir": "./dist",
    "rootDir": "./npm/src",
    "strict": true,
    "esModuleInterop": true,
    "removeComments": false,
    "moduleResolution": "node",
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "npm/src/"
  ],
  "exclude": [
    "*.js"
  ]
}